<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Animated Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_background"
        android:alpha="0.1" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark"
        android:background="?attr/colorPrimary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ Fruit Freshness AI"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a photo to analyze fruit freshness using AI"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:alpha="0.8"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Image Preview Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fruitImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Selected fruit image"
                        android:background="@color/surface_dark" />

                    <!-- Lottie Animation Placeholder -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/placeholderAnimation"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        app:lottie_rawRes="@raw/fruit_scan_animation"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                    <TextView
                        android:id="@+id/placeholderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeholderAnimation"
                        android:layout_centerHorizontal="true"
                        android:text="Take or select a fruit photo"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:alpha="0.6"
                        android:layout_marginTop="16dp" />

                    <!-- Loading Overlay -->
                    <RelativeLayout
                        android:id="@+id/loadingOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#CC000000"
                        android:visibility="gone">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/loadingAnimation"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_rawRes="@raw/loading_animation"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/loadingAnimation"
                            android:layout_centerHorizontal="true"
                            android:text="AI is analyzing..."
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cameraButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Camera"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button"
                        app:icon="@drawable/ic_camera"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/galleryButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Gallery"
                        android:textSize="16sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:icon="@drawable/ic_gallery"
                        app:iconGravity="textStart"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Results Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤– AI Analysis Results"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/resultText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Take or select a fruit photo to check freshness with AI"
                        android:textSize="16sp"
                        android:textColor="@color/on_surface"
                        android:lineSpacingExtra="4dp"
                        android:padding="16dp"
                        android:background="@drawable/result_background" />

                    <!-- Confidence Meter -->
                    <LinearLayout
                        android:id="@+id/confidenceLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Confidence Level"
                            android:textSize="14sp"
                            android:textColor="@color/on_surface"
                            android:alpha="0.7"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/confidenceBar"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            app:trackColor="@color/surface_dark"
                            app:trackCornerRadius="4dp" />

                        <TextView
                            android:id="@+id/confidenceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="12sp"
                            android:textColor="@color/on_surface"
                            android:layout_gravity="end"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tips Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tips for Best Results"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_surface"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Take photos in good lighting\nâ€¢ Focus on the fruit clearly\nâ€¢ Avoid blurry images\nâ€¢ Capture the entire fruit"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface"
                        android:alpha="0.8"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_scan"
        app:tint="@android:color/white"
        app:backgroundTint="?attr/colorPrimary"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>